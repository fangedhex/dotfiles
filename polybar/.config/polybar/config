[colors]
; Basic colors
background          = #282A36
foreground          = #F8F8F2
focus-background    = #5E81AC
focus-foreground    = #F8F8F2
primary             = #f6981e
secondary           = #e83b3f
urgent              = #b7141f

; Sub-module colors
power = ${colors.urgent}

[bar/primary]
inherit = bar/base
monitor = DisplayPort-0

[bar/left]
inherit        = bar/base
monitor        = DisplayPort-1
modules-left   = i3
modules-center =
modules-right  =

[bar/right]
inherit        = bar/base
monitor        = DisplayPort-2
modules-left   = i3
modules-center =
modules-right  =

[bar/base]
;monitor       = ${env:MONITOR:HDMI-1}
monitor-strict = true
width          = 100%
height         = 32
offset-x       = 0
offset-y       = 0
radius         = 0
fixed-center   = true
top            = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size  = 2
underline-color = ${colors.foreground}

line-size  = 0
line-color = ${colors.foreground}

border-size  = 0
border-color = ${colors.foreground}

padding-left  = 3
padding-right = 3

module-margin-left  = 1
module-margin-right = 1

font-0 = Roboto:style=Bold:pixelsize=12;2
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=11;1.5
font-2 = Font Awesome 5 Brands:style=Regular:pixelsize=12;1.5
font-3 = DSEG7 Modern:style=Bold:pixelsize=11;3

modules-left   = powermenu i3 date
modules-center = 
modules-right  = cpu ram battery updates filesystem eth

separator = |

tray-position     = none
;tray-padding      = 2
;tray-transparent = true
;tray-background  = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up   = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up   = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/xwindow]
type  = internal/xwindow
label = %title:0:50:...%

[module/i3]
type           = internal/i3
index-sort     = true
enable-click   = true
enable-scroll  = false
warping-scroll = false
reverse-scroll = false
fuzzy-match    = true
format         = <label-mode><label-state>

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding     = 0
;label-mode-foreground = #000
;label-mode-background =

;focused                 = Active workspace on focused monitor
label-focused            = %index% %icon%
;label-focused-background = ${colors.focus-background}
label-focused-background = 
label-focused-foreground = ${colors.focus-foreground}
label-focused-underline  = ${colors.urgent}
;label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding    = 2

;unfocused              = Inactive workspace on any monitor
label-unfocused         = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}

;visible                 = Active workspace on unfocused monitor
label-visible            = ${self.label-focused}
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-underline  = ${self.label-focused-underline}
label-visible-padding    = ${self.label-focused-padding}

;urgent                 = Workspace with urgency hint set
label-urgent            = ${self.label-focused}
label-urgent-background =
label-urgent-padding    = ${self.label-focused-padding}

ws-icon-0       = "code;"
ws-icon-1       = "term;"
ws-icon-2       = "web;"
ws-icon-3		= "spotify;"
ws-icon-4		= "trello;"
ws-icon-5		= "discord;"
ws-icon-default = ""

[module/cpu]
type = internal/cpu
label =  %percentage%%
label-underline = #FF5555

[module/ram]
type = internal/memory
label =  %percentage_used%%
label-underline = #50FA7B

[module/battery]
type                          = internal/battery
battery                       = BAT1
adapter                       = ACAD
full-at                       = 100
format-underline = #e74c3c

format-charging               = <animation-charging> <label-charging>
format-charging-underline    = ${self.format-underline}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-underline}
label-full            =  %percentage%%
label-full-underline = ${self.format-underline}

animation-charging-0          = "[] "
animation-charging-1          = "[] "
animation-charging-2          = "[] "
animation-charging-3          = "[] "
animation-charging-4          = "[] "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/updates]
type = custom/script
label-underline = #993d0f
exec = ~/.config/polybar/scripts/updates.sh
interval = 90

[module/network]
type = internal/network
format-connected-underline = #55aa55
label-connected = %upspeed%  %downspeed%

[module/eth]
inherit = module/network
interface = enp5s0

[module/date]
type     = internal/date
interval = 5

date     = " %{T4}%d / %m / %Y%{T-}"
date-alt =

time     = " %{T4}%H : %M%{T-}"
time-alt =

format-prefix            = " "
format-prefix-foreground = ${colors.foreground}
format-underline         =

label = %date%    %time%

[module/volume]
type = internal/volume

format-volume           = <ramp-volume> <bar-volume>
format-muted            =  
ramp-volume-0           = 
ramp-volume-1           = 
ramp-volume-2           = 
ramp-volume-3           = 
ramp-volume-foreground  = ${colors.active}
bar-volume-width = 6
bar-volume-indicator =
bar-volume-fill = 
bar-volume-fill-font = 3
bar-volume-fill-foreground = ${colors.foreground}
bar-volume-empty = 
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colors.secondary}

[module/powermenu]
type                       = custom/menu
label-active-font          = 1
label-open                 = 
label-open-foreground      = ${colors.primary}
label-close                =  Cancel
label-close-foreground     = ${colors.power}
label-separator            = "   "
label-separator-foreground = ${colors.background}

format         = <label-toggle><menu>
format-padding = 0
format-margin  = 0
format-spacing = 1

expand-right = true
menu-0-0            =  Reboot
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec       = reboot
menu-0-1            =  Shutdown
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec       = poweroff

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted-underline = #1245A8
label-mounted =  %percentage_used%%

[settings]
screenchange-reload     = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border     = over

[global/wm]
margin-top    = 0
margin-bottom = 0

